<h1><%= title%>: <%= book.title%></h1>
<p><%= book.lifespan%></p>

<% if (book_instance_list.length) { %>
  <p><strong>Delete the following copies before attempting to delete this book.</strong></p>
  <div style='margin-left:20px;margin-top:20px'>
    <h4>Book copies</h4>
    <dl>
      <% book_instance_list.forEach(book_instance => { %>
        <dt><a href="<%= book_instance.url %>"><%= book_instance.imprint%></a></dt>
      <% }) %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this book?</p>
  <form method="POST">
    <div class="form-group"> 
      <input id="bookid" class="form-control" type="hidden" name="bookid" value="<%= book._id%>">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>
