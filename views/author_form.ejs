<h1><%= title%></h1>


<form method="POST">
  <div class="form-group">
    <label for="first_name">First Name: </label>
    <input id="first_name" class="form-control" type="text" placeholder="First name (e.g.: John)" name="first_name" required value="<%= author ? author.first_name : '' %>" />

    <label for="family_name">Family Name: </label>
    <input id="family_name" class="form-control" type="text" placeholder="Family name (e.g.: Smith)" name="family_name" required value="<%= author ? author.family_name : '' %>" />
  </div>

  <div class="form-group">
    <label for="date_of_birth">Date of birth: </label>
    <input id="date_of_birth" class="form-control" type="date"  name="date_of_birth"  value="<%= author ? author.date_of_birth_formatted_input : '' %>" />

    <label for="date_of_death">Date of death: </label>
    <input id="date_of_death" class="form-control" type="date"  name="date_of_death"  value="<%= author ? author.date_of_death_formatted_input : '' %>" />
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>

  <% if (errors) { %>
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
</form>

